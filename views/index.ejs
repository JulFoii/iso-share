<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>ISO-Dateien | ISO Share</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      background: #f0f2f5;
    }
    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100%;
    }
    .content {
      flex: 1;
    }
    .footer {
      background-color: #343a40;
      color: #fff;
      text-align: center;
      padding: 15px 0;
    }
    .hero {
      background: linear-gradient(135deg, #007bff, #00d4ff);
      color: white;
      padding: 50px 0;
      text-align: center;
    }
    .hero h1 {
      font-size: 3rem;
      font-weight: bold;
    }
    .table th.sortable {
      cursor: pointer;
    }
    .table th.sortable:after {
      content: ' ‚áÖ';
      font-size: 0.8em;
      color: #666;
    }
  </style>
</head>
<body>
<div class="wrapper">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="#">ISO Share</a>
    </div>
  </nav>

  <header class="hero">
    <div class="container">
      <h1>ISO Dateien</h1>
      <p class="lead">Teile und lade ISO-Dateien einfach und sicher hoch.</p>
    </div>
  </header>

  <div class="content container my-5">
    <!-- Echtzeit-Suche -->
    <div class="row mb-4">
      <div class="col-md-6 offset-md-3">
        <input type="text" id="searchInput" class="form-control form-control-lg" placeholder="üîç Nach Dateiname suchen..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
      </div>
    </div>

    <!-- Tabelle -->
    <div class="card shadow-sm">
      <div class="card-body">
        <table class="table table-striped table-hover table-bordered text-center align-middle" id="filesTable">
          <thead class="table-primary">
            <tr>
              <th class="sortable" onclick="sortTable('filesTable', 0, false, this)">Dateiname</th>
              <th class="sortable" onclick="sortTable('filesTable', 1, true, this)">Gr√∂√üe</th>
              <th>Download</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach(file => { %>
              <tr>
                <td><%= file.name %></td>
                <td data-size="<%= file.size %>"><%= (file.size / 1024 / 1024).toFixed(2) %> MB</td>
                <td>
                  <a href="/download/<%= file.name %>" class="btn btn-outline-primary btn-sm">‚¨áÔ∏è Download</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-3 text-end">
      <a href="/admin-upload" class="btn btn-secondary btn-lg">üîí Admin Upload</a>
    </div>
  </div>

  <footer class="footer">
    <div class="container">
      <p class="mb-0">¬© 2025 ISO Share. Alle Rechte vorbehalten.</p>
    </div>
  </footer>
</div>

<!-- Sortier- und Echtzeit-Suche-Skript -->
<script>
  function sortTable(tableId, columnIndex, numeric, headerElement) {
    const table = document.getElementById(tableId);
    const tbody = table.tBodies[0];
    const rowsArray = Array.from(tbody.querySelectorAll("tr"));
    
    let currentOrder = headerElement.getAttribute("data-order") || "asc";
    let newOrder = currentOrder === "asc" ? "desc" : "asc";
    headerElement.setAttribute("data-order", newOrder);
    
    rowsArray.sort((a, b) => {
      let cellA = a.cells[columnIndex].textContent.trim();
      let cellB = b.cells[columnIndex].textContent.trim();
      
      if (numeric) {
        cellA = parseFloat(a.cells[columnIndex].getAttribute("data-size"));
        cellB = parseFloat(b.cells[columnIndex].getAttribute("data-size"));
      } else {
        cellA = cellA.toLowerCase();
        cellB = cellB.toLowerCase();
      }
      
      if (cellA < cellB) return newOrder === "asc" ? -1 : 1;
      if (cellA > cellB) return newOrder === "asc" ? 1 : -1;
      return 0;
    });
    
    rowsArray.forEach(row => tbody.appendChild(row));
  }

  document.getElementById('searchInput').addEventListener('input', function() {
    const query = this.value.toLowerCase();
    const rows = document.querySelectorAll('#filesTable tbody tr');
    rows.forEach(row => {
      const filename = row.querySelector('td').textContent.toLowerCase();
      row.style.display = filename.includes(query) ? '' : 'none';
    });
  });
</script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
